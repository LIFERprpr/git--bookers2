<main>
    <p id="notice"></p>
      <div class="container px-5 px-sm-0">
        <div class="row">

          <%= render 'books/user_info', user: @user, book: @book_new %>

            <div class="col-md-8 offset-md-1">
      		  <h2>Book detail</h2>
      		  <table class="table">
      		    <tbody>
      		      <tr>
                   <td>
                     <%= link_to user_path(@book.user.id) do %>
                      <%= attachment_image_tag @user, :profile_image, format: 'jpeg', fallback: "no_image.jpg", size: "40x40" %><br />
                     <%= @user.name %>
                     <% end %>
                   </td>
                    <td>
                     <%= link_to book_path(@book) do %>
                     <%= @book.title %>
                     <% end %>
                    </td>
                    <td>
                     <%= @book.body %>
                    </td>
                    <td>
                    <% if @user.id == current_user.id %>
                     <%= link_to "Edit", edit_book_path(@book.id), class: 'btn btn-sm btn-success edit_book_7752' %>
                    <% end %>
                    </td>
                    <td>
                    <% if @book.user == current_user %>
                     <%= link_to "Destroy", book_path(@book.id), method: :delete, "data-confirm" => "本当に消しますか？", class: 'btn btn-sm btn-danger destroy_book_8053' %>
                    <% end %>
                    </td>
                  </tr>
                </tbody>
              </table>
            </div>
</main>