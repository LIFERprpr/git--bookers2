<p id="notice"></p>
  <div class="container px-5 px-sm-0">
    <div class="row">
      <div class="col-md-3">
        <h2>User info</h2>
        <%= attachment_image_tag @user, :profile_image, :fill, 60, 60, format: 'jpeg', fallback: "no_image.jpg" %>
        <table class="table">
          <tbody>
            <tr></tr>
            <tr>
             <% if user_signed_in? %>
	           <th>name</th>
	           <th><%= current_user.name %></th>
            </tr>
            <tr>
	           <th>introduction</th>
	           <th><%= current_user.introduction %></th>
	           <% end %>
            </tr>
          </tbody>
        </table>
        
        <div class="row">
          <a class="btn btn-outline-secondary btn-block fas fa-user-cog edit_user_9055" href="/users/9055/edit"></a>
          
        </div>
        
        <div class="col-md-8 offset-md-1">
  		  <h2>Book detail</h2>
  		  <table class="table">
  		    <tbody>
  		      <tr>
               <td>
                 <%= link_to user_path(@book.user.id) do %>
                  <%= attachment_image_tag @user, :profile_image %>
                 <% end %>
                 <%= @user.name %>
                </td>
                <td>
                 <%= link_to book_path(@book.id) %>
                 <%= @book.title %>
                </td>
                <td>
                 <%= @book.body %>
                </td>
                <td>
                 <%= link_to "Edit", edit_book_path(@book.id), class: 'btn btn-sm btn-success edit_book_7752' %>
                </td>
                <td>
                 <%= link_to "Destroy", book_path(@book.id), method: :delete, "data-confirm" => "本当に消しますか？" %>
                </td>
              </tr>
            </tbody>
          </table>
        </div>